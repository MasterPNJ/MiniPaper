<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_minipaper"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_minipaper_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MiniPaper"
        tools:targetApi="31">

        <activity
            android:name=".OptionsActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_activity_options"
            android:theme="@style/Theme.MiniPaper" />

        <!-- FirstConnexionActivity devient l'activitÃ© principale (Launcher) -->
        <activity
            android:name=".FirstConnexionActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/Theme.MiniPaper">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CountdownActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_countdown_activity"
            android:theme="@style/Theme.MiniPaper" />

        <activity
            android:name=".FlappyPapierActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_flappy_papier_activity"
            android:theme="@style/Theme.MiniPaper" />

        <activity
            android:name=".MultiActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_multi_activity"
            android:theme="@style/Theme.MiniPaper" />

        <activity
            android:name=".RandomtapActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_randomtap_activity"
            android:theme="@style/Theme.MiniPaper" />

        <activity
            android:name=".EndActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_endactivity_activity"
            android:theme="@style/Theme.MiniPaper" />

        <activity
            android:name=".LeaderbordActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_activity_leaderbord"
            android:theme="@style/Theme.MiniPaper" />

        <activity
            android:name=".ShakeItUpActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_activity_shake_it_up"
            android:theme="@style/Theme.MiniPaper" />

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:theme="@style/Theme.MiniPaper" />

    </application>

</manifest>
